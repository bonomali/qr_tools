{
  "env": {
    "browser": true
  },
  "extends": ["airbnb", "plugin:vue/recommended", "prettier"],
  "globals": {
    "Vue": true,
    "chrome": true,
    "document": true,
    "window": true
  },
  "parserOptions": {
    "ecmaVersion": 8,
    "sourceType": "module"
  },
  "plugins": ["vue"],
  "rules": {
    "linebreak-style": "off",
    "no-console": "off",
    "no-restricted-syntax": "off",
    "vue/html-self-closing": [
      "error",
      {
        "html": {
          "void": "always",
          "normal": "never",
          "component": "always"
        },
        "svg": "always",
        "math": "always",
        "canvas": "always"
      }
    ]
  }
}
